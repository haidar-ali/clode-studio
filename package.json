{
  "name": "claude-code-ide-vue",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run generate && electron-builder",
    "electron:compile": "tsc -p electron/tsconfig.json && tsc -p electron/tsconfig.preload.json",
    "dist": "npm run generate && npm run electron:compile && electron-builder"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.51",
    "@anthropic-ai/sdk": "^0.56.0",
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-cpp": "^6.0.3",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-java": "^6.0.2",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/lang-php": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.2",
    "@codemirror/lang-sql": "^6.9.0",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/legacy-modes": "^6.5.1",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.0",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify/vue": "^5.0.0",
    "@monaco-editor/loader": "^1.5.0",
    "@types/marked": "^5.0.2",
    "chart.js": "^4.5.0",
    "codemirror": "^6.0.2",
    "dotenv": "^16.4.7",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "lunr": "^2.3.9",
    "marked": "^16.1.1",
    "monaco-editor": "^0.52.2",
    "node-pty": "^1.0.0",
    "nuxt": "^3.17.6",
    "typescript": "^5.8.3",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@formkit/drag-and-drop": "^0.5.3",
    "@pinia/nuxt": "^0.11.1",
    "@types/chokidar": "^1.7.5",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.14",
    "@types/uuid": "^9.0.7",
    "@vueuse/nuxt": "^13.5.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "electron-store": "^10.1.0",
    "lodash": "^4.17.21",
    "mitt": "^3.0.1",
    "naive-ui": "^2.42.0",
    "splitpanes": "^4.0.4",
    "uuid": "^9.0.1",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vue-tsc": "^3.0.1",
    "wait-on": "^8.0.3",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "build": {
    "appId": "com.anthropic.claude-code-ide",
    "productName": "Claude Code IDE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".output/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    }
  }
}
