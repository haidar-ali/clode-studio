{
  "name": "clode-studio",
  "version": "0.1.0",
  "description": "AI-powered IDE built for Claude Code CLI with modular workspace",
  "author": "Clode Studio Team",
  "private": true,
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS=\"--max-old-space-size=4096\" nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && npx electron-rebuild && node scripts/download-ripgrep.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:preview": "concurrently \"nuxt preview\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "nuxt build && npm run electron:preview",
    "electron:remote": "node scripts/check-build-needed.js && npm run electron:preview || npm run electron:build",
    "electron:headless": "npm run electron:compile && NODE_OPTIONS=\"--max-old-space-size=4096\" nuxt generate && CLODE_MODE=headless concurrently \"nuxt preview\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:headless:server": "npm run electron:compile && NODE_OPTIONS=\"--max-old-space-size=6144\" nuxt generate --preset=static && CLODE_MODE=headless concurrently \"nuxt preview\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:compile": "tsc -p electron/tsconfig.json && tsc -p electron/tsconfig.preload.json",
    "dist": "npm run build && npm run electron:compile && electron-builder",
    "dist:all": "npm run build && npm run electron:compile && electron-builder -mwl",
    "dist:mac": "npm run build && npm run electron:compile && electron-builder --mac",
    "dist:mac:signed": "source .env.build  && npm run dist:mac",
    "dist:mac:nosign": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run dist:mac",
    "dist:win": "npm run build && npm run electron:compile && electron-builder --win",
    "dist:linux": "npm run build && npm run electron:compile && electron-builder --linux",
    "dist:lite": "npm run generate && npm run electron:compile && electron-builder --linux --config.productName=\"Clode Studio Lite\" --config.extraMetadata.variant=lite",
    "dist:server": "npm run generate && npm run electron:compile && electron-builder --linux --config.productName=\"Clode Studio Server\" --config.extraMetadata.variant=server",
    "release": "npm run dist:all && electron-builder --publish always",
    "release:draft": "npm run dist:all && electron-builder --publish onTag"
  },
