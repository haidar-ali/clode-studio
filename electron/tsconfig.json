{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": ".",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "electron"]
  },
  "include": ["main.ts", "ast-parser.ts", "knowledge-service.ts", "knowledge-types.ts", "project-detector.ts", "universal-parser.ts", "claude-session-service.ts", "claude-instance-service.ts"],
  "exclude": ["node_modules", "**/*.js", "preload.ts"]
}